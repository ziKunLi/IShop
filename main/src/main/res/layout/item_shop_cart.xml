<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/iconItemShopCart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="{fa-check-circle}"
        android:textColor="@android:color/darker_gray"
        tools:ignore="HardcodedText" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageItemShopCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <!--商品信息-->
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvItemShopCartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="商品标题" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvItemShopCartDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="商品描述" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvItemShopCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/app_main"
            android:typeface="monospace"
            android:text="2.00" />

    </android.support.v7.widget.LinearLayoutCompat>
    <!--商品信息结束-->

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="10dp">
        
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/iconItemMinus"
            android:text="{fa-minus-square-o}"
            android:textSize="24sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/tvItemShopCartCount"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"/>
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/iconItemPlus"
            android:text="{fa-plus-square-o}"
            android:textSize="24sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>